# To prevent access to .env and other files
<Files .*>
    # Apache 2.2
    <IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
    </IfModule>
    # Apache 2.4
    <IfModule mod_authz_core.c>
    Require all denied
    </IfModule>
</Files>

# Redirigir todo el tráfico a la carpeta public sin que se vea en la URL
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Deshabilitar la visualización de índices de directorios
    Options -Indexes

    # Evitar que los usuarios vean la carpeta /public/ en la URL
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]

    # Controlar encabezados de autorización
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirigir solicitudes que no sean archivos o carpetas al controlador de Laravel
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ public/index.php [L]
</IfModule>